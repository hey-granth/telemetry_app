# Application Configuration
APP_NAME=telemetry-backend
APP_ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://telemetry:telemetry@localhost:5432/telemetry_db

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# API Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=your-secret-key-change-in-production

# Device API Keys (comma-separated list of valid keys)
# Each device should have a unique API key
DEVICE_API_KEYS=dev-key-esp32-01,dev-key-esp32-02

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Aggregation Settings
AGGREGATION_CACHE_TTL=60
HISTORY_DEFAULT_LIMIT=1000
